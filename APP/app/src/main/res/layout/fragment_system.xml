<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_background"
    android:scrollbars="none">

    <!-- Single Parent Layout Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section 1: Distribution name, Kernel, Uptime -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Text Views -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Distribution name -->
                <TextView
                    android:id="@+id/Distribution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distribution name"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Kernel -->
                <TextView
                    android:id="@+id/Kernel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kernel"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Uptime -->
                <TextView
                    android:id="@+id/Uptime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uptime"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Image (1:1 aspect ratio) -->
            <ImageView
                android:id="@+id/distributionImage"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/sys_default"
                android:layout_gravity="center"
                android:contentDescription="Distribution image"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Cpu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU Name"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Cpu_architecture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU Architecture"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Cpu_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU Type"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Cpu_cores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU Cores"
                    android:textColor="@color/text"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Image (1:1 aspect ratio) -->
            <ImageView
                android:id="@+id/cpuImage"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/sys_cpu"
                android:layout_gravity="center"
                android:contentDescription="CPU Brand Logo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/Network_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Network Devices:"
                android:textColor="@color/text"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
