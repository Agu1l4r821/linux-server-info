<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RaspberryPi" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/custom_background</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/custom_background</item>
        <item name="android:navigationBarColor">@color/nav_menu_color</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/active_item</item>
    </style>

    <style name="SwitchStyle" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <!-- The color for the track when the switch is checked (enabled) -->
        <item name="trackTint">@color/background_progress_bar</item>
        <item name="thumbTint">@color/usage_progress_bar</item>
    </style>
</resources>